{
  "compilerOptions": {
    "preserveConstEnums": true,
    "strict": true,
    "target": "esnext",
    "module": "esnext",
    "rootDir": "./src",
    "outDir": "./dist",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "noImplicitAny": false
  },
  "exclude": ["node_modules", "dist"]
}

